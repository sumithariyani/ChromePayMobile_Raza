<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scanner"
    tools:context=".FaceRecognition">

    <TextView
        android:id="@+id/please_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_17"
        android:layout_above="@+id/img_l"
        android:layout_centerInParent="true"
        android:layout_marginVertical="40dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#38C1F0"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/img_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/scan_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/face_recognitionicon_icon_07"/>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/open_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:text="Scaning...."
        android:background="@drawable/login_button_background"
        app:backgroundTint="@null"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>